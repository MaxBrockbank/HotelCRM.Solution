@{
  Layout = "_Layout";
}

@using HotelCRM.Models;
@model List<HotelCRM.Models.Room>;

<h1>Rooms</h1>

@if (@Model.Count == 0)
{
  <h3>No rooms have been added yet!</h3>
}

@foreach (Room room in Model)
{
  <li>@Html.ActionLink($"{room.RoomType}", "Details", new { id = room.RoomId })</li>
}

<p>@Html.ActionLink("Add new room", "Create")</p>