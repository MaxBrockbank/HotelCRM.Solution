@{
  Layout = "_Layout";
}

@using HotelCRM.Models;
@model List<HotelCRM.Models.Guest>

<h1>Guests</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No Guests have been added yet!</h3>
}

@foreach (Guest guest in Model)
{
  <li>@Html.ActionLink($"{guest.Name}", "Details", new { id = guest.GuestId })</li>
}

<p>@Html.ActionLink("Add new guest", "Create")</p>