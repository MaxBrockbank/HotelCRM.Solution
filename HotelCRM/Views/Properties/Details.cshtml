@{
  Layout = "_Layout";
}

@model HotelCRM.Models.Property

<h1>Property Details:</h1>
<h3>Name: @Html.DisplayFor(model => model.Name)</h3>
<h3>Neighborhood: @Html.DisplayFor(model => model.City)</h3>
<h3>Star Rating: @Html.DisplayFor(model => model.Stars)</h3>
<h3>Year Built: @Html.DisplayFor(model => model.YearBuilt)</h3>

<nav class="navbar navbar-light">  
  <div class="container-fluid" id = "nav-background">  
    <ul class="nav navbar-nav">
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><li>@Html.ActionLink("Edit Property", "Edit", new { id = Model.PropertyId })</li>  
      </button>
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span><li>@Html.ActionLink("Delete Property", "Delete", new { id = Model.PropertyId })</li>  
      </button>
    </ul>  
  </div>  
</nav>