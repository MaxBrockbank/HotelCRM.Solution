@{
  Layout = "_Layout";
}

@using HotelCRM.Models;
@model List<HotelCRM.Models.Property>;

<h1>Properties</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No properties have been added to your portfolio yet. </h3>
}

@foreach (Property property in Model)
{
  <li>@Html.ActionLink($"{property.Name}", "Details", new { id = property.PropertyId })</li>
}

<p>@Html.ActionLink("Add new Property", "Create")</p>